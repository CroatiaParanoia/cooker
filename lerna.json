{
  "packages": ["packages/*"],
  "version": "0.0.0",
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master"],
      "amend": false,
      "conventionalCommits": true
    },
    "publish": {
      "verifyAccess": false,
      "registry": "http://npm.jsany.org"
    }
  }
}
